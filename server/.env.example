# Server
PORT=3000
NODE_ENV=development

# JWT (use long random string in production)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Admin (set on first run or via seed)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=ChangeMe123!

# CORS - comma-separated origins (e.g. https://yoursite.com,http://localhost:5500)
CORS_ORIGIN=http://localhost:5500,http://127.0.0.1:5500,http://localhost:3000
